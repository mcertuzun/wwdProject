<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.connection.driver_class"> oracle.jdbc.driver.OracleDriver</property>
		<property name="hibernate.connection.url">jdbc:oracle:thin:@test-PC:1521:XE</property>
		<property name="“hibernate.dialect”">org.hibernate.dialect.Oracle10gDialect
		</property>
		<property name="hibernate.connection.username">mce</property>
		<property name="hibernate.connection.password">mce</property>
		<!--– autocommit false– -->
		<property name="“hibernate.connection.autocommit“">False</property>
	
		<property name="hibernate.current_session_context_class">thread</property>
		<property name="hibernate.dialect">org.hibernate.dialect.Oracle10gDialect</property>
		<!--– to display sql query generated when running the program – -->
		<property name="show_sql">true</property>
		<property name="“use_sql_comments”">true</property>

	</session-factory>
</hibernate-configuration>